<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title KCCauldron - CAPPO</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>
    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet">
    <link href="~/Content/apprise.min.css" rel="stylesheet">
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/louder.js"></script>
    <script src="~/Scripts/apprise-1.5.min.js"></script>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" href="/"><img src="https://dl.dropboxusercontent.com/u/49506731/cappo-logo.png"></a>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        @Html.MenuLink("Notifications", "Index", "User")
                        @Html.MenuLink("Vote", "Index", "Vote")
                        @Html.MenuLink("Top Votes", "TopVotes", "Vote")
                        @Html.MenuLink("Capo", "Index", "Capo")
                        @Html.MenuLink("Alert", "Index", "Alert")
                        @Html.MenuLink("Submit A Song", "Index", "Submission")
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>  
        </div>
        </div>
        <div class="container" style="padding: 0 10px 10px 10px;">
            <div class="latest-chant-container" style="width: 320px; height: 180px; padding-bottom: 5px;">
                <div class="latest-chant" style="color: #FFFFFF; background-color:rgba(0, 0, 0, 0.7);"></div>
            </div>	

            @RenderBody()
        </div>
        <!-- /container -->
</body>
</html>
